<%- include('../partials/header', { activePage: 'admin' }) %>
<main class="admin-page">
  <div class="admin-header">
    <h1><%= title %></h1>
    <a href="/admin/banners" class="btn btn-secondary">Назад к баннерам</a>
  </div>

  <div class="admin-content">
    <form action="<%= action %>" method="post" class="admin-form">
      <div class="form-group">
        <label for="title">Заголовок *</label>
        <input type="text" id="title" name="title" value="<%= banner.title || '' %>" required>
      </div>

      <div class="form-group">
        <label for="subtitle">Подзаголовок</label>
        <textarea id="subtitle" name="subtitle" rows="3"><%= banner.subtitle || '' %></textarea>
      </div>

      <div class="form-group">
        <label for="button_text">Текст кнопки</label>
        <input type="text" id="button_text" name="button_text" value="<%= banner.button_text || '' %>" placeholder="Например: Перейти в каталог">
      </div>

      <div class="form-group">
        <label for="button_url">URL кнопки</label>
        <input type="url" id="button_url" name="button_url" value="<%= banner.button_url || '' %>" placeholder="https://example.com">
      </div>

      <div class="form-group">
        <label for="image_url">URL изображения *</label>
        <input type="url" id="image_url" name="image_url" value="<%= banner.image_url || '' %>" required placeholder="https://example.com/image.jpg">
        <small>Рекомендуемый размер: 1200x400 пикселей</small>
      </div>

      <div class="form-group">
        <label for="sort_order">Порядок сортировки</label>
        <input type="number" id="sort_order" name="sort_order" value="<%= banner.sort_order || 0 %>" min="0">
        <small>Меньшие числа отображаются первыми</small>
      </div>

      <div class="form-group">
        <label class="checkbox-label">
          <input type="checkbox" name="is_active" value="1" <%= banner.is_active !== false ? 'checked' : '' %>>
          Активен
        </label>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary"><%= submitText %></button>
        <a href="/admin/banners" class="btn btn-secondary">Отмена</a>
      </div>
    </form>
  </div>
</main>

<style>
.admin-form {
  max-width: 600px;
  background: var(--card-bg-color);
  padding: 30px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: var(--text-color);
}

.form-group input[type="text"],
.form-group input[type="url"],
.form-group input[type="number"],
.form-group textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  background: var(--form-input-bg-color);
  color: var(--form-input-text-color);
  font-size: 1rem;
  box-sizing: border-box;
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--form-input-focus-border-color);
  box-shadow: 0 0 0 3px rgba(35, 120, 200, 0.1);
}

.form-group small {
  display: block;
  margin-top: 5px;
  color: var(--text-muted);
  font-size: 0.85rem;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
}

.checkbox-label input[type="checkbox"] {
  width: auto;
  margin: 0;
}

.form-actions {
  display: flex;
  gap: 15px;
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid var(--border-color);
}
</style> 
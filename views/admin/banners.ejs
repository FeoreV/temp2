<!DOCTYPE html>
<html>
<head>
  <title>Управление баннерами</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/admin-header') %>
  <div class="admin-container">
    <h1>Управление баннерами</h1>
    <a href="/admin/banners/add" class="btn">Добавить баннер</a>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Заголовок</th>
          <th>Изображение</th>
          <th>Ссылка</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        <% banners.forEach(banner => { %>
          <tr>
            <td><%= banner.id %></td>
            <td><%= banner.title %></td>
            <td><img src="<%= banner.image_url %>" alt="<%= banner.title %>" width="100"></td>
            <td><%= banner.link_url %></td>
            <td>
              <a href="/admin/banners/edit/<%= banner.id %>">Редактировать</a>
              <form action="/admin/banners/delete/<%= banner.id %>" method="POST" style="display:inline;">
                <button type="submit">Удалить</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>

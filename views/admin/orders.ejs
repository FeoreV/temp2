<%- include('../partials/admin-header') %>

<main>
  <h1>Заказы</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Имя клиента</th>
        <th>Email клиента</th>
        <th>Сумма</th>
        <th>Дата</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.customer_name %></td>
          <td><%= order.customer_email %></td>
          <td><%= order.total_price %></td>
          <td><%= order.created_at %></td>
          <td>
            <a href="/admin/orders/<%= order.id %>">Просмотр</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>

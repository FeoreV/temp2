<%- include('partials/header') %>

<main>
  <h1>Оформление заказа</h1>

  <form class="checkout-form" action="/place-order" method="post">
    <div class="form-group">
      <label for="name">Имя</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="phone">Телефон</label>
      <input type="tel" id="phone" name="phone" required>
    </div>
    <div class="form-group">
      <label for="address">Адрес доставки</label>
      <textarea id="address" name="address" required></textarea>
    </div>

    <div class="payment-methods">
      <h3>Способ оплаты</h3>
      <label><input type="radio" name="payment" value="card" checked> Банковской картой</label>
      <label><input type="radio" name="payment" value="cash"> Наличными при получении</label>
    </div>

    <div class="delivery-methods">
      <h3>Способ доставки</h3>
      <label><input type="radio" name="delivery" value="courier" checked> Курьером</label>
      <label><input type="radio" name="delivery" value="pickup"> Самовывоз</label>
    </div>

    <button type="submit" class="btn">Подтвердить заказ</button>
  </form>
</main>

<%- include('partials/footer') %>

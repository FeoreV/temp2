<%- include('partials/header') %>

<main>
  <section class="slider">
    <div class="slider-item">
      <img src="https://via.placeholder.com/1200x400?text=Slider+Banner" alt="Banner 1">
    </div>
  </section>

  <section class="categories">
    <h2>Категории</h2>
    <div class="category-list">
      <% categories.forEach(category => { %>
        <div class="category-item">
          <a href="/catalog?category=<%= category.id %>">
            <img src="https://via.placeholder.com/300x300?text=<%= category.name %>" alt="<%= category.name %>">
            <h3><%= category.name %></h3>
          </a>
        </div>
      <% }); %>
    </div>
  </section>

  <section class="usp">
    <h2>Наши преимущества</h2>
    <div class="usp-list">
      <div class="usp-item">
        <i class="fas fa-truck"></i>
        <h3>Быстрая доставка</h3>
      </div>
      <div class="usp-item">
        <i class="fas fa-check-circle"></i>
        <h3>Гарантия качества</h3>
      </div>
      <div class="usp-item">
        <i class="fas fa-thumbs-up"></i>
        <h3>Лучшие цены</h3>
      </div>
    </div>
  </section>

  <section class="new-products">
    <h2>Новинки</h2>
    <div class="product-list">
      <% newProducts.forEach(product => { %>
        <div class="product-card">
          <a href="/product/<%= product.id %>">
            <img src="<%= product.image_url %>" alt="<%= product.name %>">
            <h3><%= product.name %></h3>
            <p>Цена: <%= product.price %> руб.</p>
          </a>
          <form action="/cart/add" method="post">
            <input type="hidden" name="productId" value="<%= product.id %>">
            <button type="submit" class="btn">В корзину</button>
          </form>
        </div>
      <% }); %>
    </div>
  </section>

  <section class="best-sellers">
    <h2>Хиты продаж</h2>
    <div class="product-list">
      <% bestSellers.forEach(product => { %>
        <div class="product-card">
          <a href="/product/<%= product.id %>">
            <img src="<%= product.image_url %>" alt="<%= product.name %>">
            <h3><%= product.name %></h3>
            <p>Цена: <%= product.price %> руб.</p>
          </a>
          <form action="/cart/add" method="post">
            <input type="hidden" name="productId" value="<%= product.id %>">
            <button type="submit" class="btn">В корзину</button>
          </form>
        </div>
      <% }); %>
    </div>
  </section>

  <section class="reviews">
    <h2>Отзывы</h2>
    <div class="review-list">
      <div class="review-item">
        <p>"Отличный магазин! Всем рекомендую."</p>
        <span>- Иван Иванов</span>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
